<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appNameColor"
    tools:context=".activity.DiyActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <jp.co.cyberagent.android.gpuimage.GPUImageView
            android:id="@+id/diy_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.example.presetr.view.CropControllerView
            android:id="@+id/cropControllerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/diy_image_source"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
        <ImageView
            android:id="@+id/diy_cancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nav_icon_cancle"/>
        <ImageView
            android:id="@+id/diy_done"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/nav_icon_done"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/diy_contrast"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/btn_icon_contrast"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/diy_select_filter"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <!--选择滤镜-->
                <com.example.presetr.view.FilterSelectLayout
                    android:id="@+id/filter_select_custom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <!--调整画面-->
                <com.example.presetr.view.AdjustSelectLayout
                    android:id="@+id/adjust_select_custom_layout"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <!--裁剪-->
                <com.example.presetr.view.EditSelectLayout
                    android:id="@+id/crop_select_custom_layout"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/diy_filter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/tab_icon_filter_pressed"/>
                <ImageView
                    android:id="@+id/diy_overlay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/tab_icon_overlay_pressed"/>
                <ImageView
                    android:id="@+id/diy_adjust"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:layout_weight="1"
                    android:src="@drawable/tab_icon_adjust_pressed"/>
                <ImageView
                    android:id="@+id/diy_edit"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:layout_weight="1"
                    android:src="@drawable/tab_icon_edit_pressed"/>
            </LinearLayout>
        </LinearLayout>
        <com.example.presetr.view.FilterEditBar
            android:id="@+id/filter_diy_edit_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>
        <com.example.presetr.view.OneWayEditBar
            android:id="@+id/adjust_one_way_edit_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>
        <com.example.presetr.view.TwoWayEditBar
            android:id="@+id/adjust_two_way_edit_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>
        <com.example.presetr.view.TempEditBar
            android:id="@+id/adjust_temp_edit_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>
        <com.example.presetr.view.HueEditBar
            android:id="@+id/adjust_hue_edit_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>