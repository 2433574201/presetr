<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/appNameColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/hue_edit_bar_slider_gray"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:src="@drawable/slider_temp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="20dp"/>
    <ImageView
        android:id="@+id/hue_edit_bar_slider_circle"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/slider_circle"
        app:layout_constraintTop_toTopOf="@id/hue_edit_bar_slider_gray"
        app:layout_constraintBottom_toBottomOf="@id/hue_edit_bar_slider_gray"
        app:layout_constraintLeft_toLeftOf="@id/hue_edit_bar_slider_gray"/>
    <TextView
        android:id="@+id/hue_edit_bar_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#FEFEFF"
        app:layout_constraintBottom_toTopOf="@id/hue_edit_bar_slider_circle"
        app:layout_constraintLeft_toLeftOf="@id/hue_edit_bar_slider_circle"
        app:layout_constraintRight_toRightOf="@id/hue_edit_bar_slider_circle"
        android:layout_marginBottom="5dp"/>
    <ImageView
        android:id="@+id/hue_edit_bar_cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/btn_cancle_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="22dp"
        android:layout_marginBottom="18dp"/>

    <ImageView
        android:id="@+id/hue_edit_bar_confirm"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/btn_done_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="18dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Adjust Strength"
        android:textColor="@color/backColor"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="18dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>