<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/appNameColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/rotate_edit_bar_slider_gray"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:src="@drawable/slider_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rotate_select_cancel"
        app:layout_constraintRight_toLeftOf="@id/rotate_select_done"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/rotate_edit_bar_slider_circle"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/slider_circle"
        app:layout_constraintTop_toTopOf="@id/rotate_edit_bar_slider_gray"
        app:layout_constraintBottom_toBottomOf="@id/rotate_edit_bar_slider_gray"
        app:layout_constraintLeft_toLeftOf="@id/rotate_edit_bar_slider_gray"/>
    <ImageView
        android:id="@+id/rotate_select_cancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_cancle_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/rotate_select_done"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_done_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>