<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColor"
    android:orientation="vertical"
    tools:context=".activity.FilterPreviewActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/preview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filter_preview_recycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/filter_preview_back"
            android:src="@drawable/nav_back_white"
            android:scaleType="center"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintTop_toTopOf="@id/preview_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="7dp"/>
        <ImageView
            android:id="@+id/filter_preview_unlock"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:src="@drawable/tab_rounded_rectangle_2"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@id/filter_preview_toVIP"/>
        <TextView
            android:id="@+id/filter_preview_unlock_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="@color/backColor"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toTopOf="@id/filter_preview_unlock"
            app:layout_constraintLeft_toLeftOf="@id/filter_preview_unlock"
            app:layout_constraintRight_toRightOf="@id/filter_preview_unlock"/>
        <TextView
            android:id="@+id/filter_preview_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/backColor"
            android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toBottomOf="@id/filter_preview_unlock"
            app:layout_constraintLeft_toLeftOf="@id/filter_preview_unlock"
            app:layout_constraintRight_toRightOf="@id/filter_preview_unlock"/>
        <ImageView
            android:id="@+id/filter_preview_toVIP"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:src="@drawable/tab_rounded_rectangle_1"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/filter_preview_unlock_all_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="@color/backColor"
            android:layout_marginTop="9dp"
            android:text="Unlock all presets"
            app:layout_constraintTop_toTopOf="@id/filter_preview_toVIP"
            app:layout_constraintLeft_toLeftOf="@id/filter_preview_toVIP"
            app:layout_constraintRight_toRightOf="@id/filter_preview_toVIP"/>
        <TextView
            android:id="@+id/filter_preview_vip_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/backColor"
            android:layout_marginBottom="9dp"
            android:text="Upgrade to VIP "
            app:layout_constraintBottom_toBottomOf="@id/filter_preview_toVIP"
            app:layout_constraintLeft_toLeftOf="@id/filter_preview_toVIP"
            app:layout_constraintRight_toRightOf="@id/filter_preview_toVIP"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>